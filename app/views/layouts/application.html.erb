<!DOCTYPE html>
<html>
  <head>
    <title>Tumblr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Raleway:400,700'%>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.icon' %>
  </head>

  <body>
    <div id="sidebar">
      <ul>
          <li class="category"><%= link_to("Tumblr", root_path) %></li>
          <li><%= link_to("Posts", root_path) %></li>
          <li><%= link_to("About", about_path) %></li>          
      </ul>
      <% if !user_signed_in? %>
        <p class="sign_in"><%= link_to("User Login", new_user_session_path) %></p>
      <% end %>
    </div>

    <div id="main_content">
       
      <%= render('layouts/navigation') %>

      <% flash.each do |name, msg|%>
        <%=content_tag(:div, msg, class: "alert") %>
      <% end %>

      <!--p class="notice"><%= notice %></p>
      <p-- class="alert"><%= alert %></p-->

      <%= yield %>

    </div>    
  </body>
</html>
